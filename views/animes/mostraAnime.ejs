<!DOCTYPE html> 
<head> 
    <%- include ('../head'); %>
</head> 
<body>
    <header> 
        <%- include ('../menu'); %>
    </header>   
    <div class="container">
    <h1>Lista dos Animes</h1>
        <div class="row"> 
            <% dadosAnime.forEach(function(dados) { %>  
                <div class="flip-card col-md-3 mb-3"> 
                    <div class="card"> 
                        <div class="card-img">
                            <img src="imagens/<%= dados.imagem %> " class="card-img-top" alt="poster do anime <%= dados.titulo %>" style="height: 23rem"> 
                        </div>
                        <div class="card-body" style="height: 23rem">
                            <h5 class="card-title"><%= dados.titulo %></h5>
                            <p class="card-text"><%= dados.sinopse %></p>
                            <a href="/apagar/<%=dados.id %>" class="delete material-icons">delete</a> <br>
                            <a href="/editar/<%=dados.id %>" class="edit material-icons">create </a> 
                        </div>  
                    </div>
                </div>  
            <% }) %>  
    </div>
</body>